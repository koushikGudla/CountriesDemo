<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/country_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/country_code"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="United States Of America, NA"/>

    <TextView
        android:id="@+id/country_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/country_name"
        app:layout_constraintBottom_toBottomOf="@id/country_name"
        app:layout_constraintStart_toEndOf="@id/country_name"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="US"/>

    <TextView
        android:id="@+id/country_capital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/country_name"
        app:layout_constraintStart_toStartOf="@id/country_name"
        app:layout_constraintEnd_toEndOf="@id/country_name"
        app:layout_constraintHorizontal_bias="0.0"
        tools:text="Washington, D.C."/>


</androidx.constraintlayout.widget.ConstraintLayout>